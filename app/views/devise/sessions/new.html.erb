<div class="sign-in-container mx-auto">
  <div class="sign-in-card">
    <h3 class="text-body text-center">Welcome Back</h3>
    <h6 class="text-secondary text-center">Please sign in below</h6>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", placeholder: "julius.cesar@consul.spqr.rome" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
