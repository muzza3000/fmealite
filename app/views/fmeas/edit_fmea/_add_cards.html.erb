<!-- Created 4 times, once per card type. The parent id value will be overwritten using the js controller -->
<%= render "fmeas/edit_fmea/add_card_modal", element: Function.new(fmea: fmea) %>
<%= render "fmeas/edit_fmea/add_card_modal", element: FailureMode.new(function: Function.new(fmea: fmea)) %>
<%= render "fmeas/edit_fmea/add_card_modal", element: Cause.new(failure_mode: FailureMode.new(function: Function.new(fmea: fmea))) %>
<%= render "fmeas/edit_fmea/add_card_modal", element: Effect.new(failure_mode: FailureMode.new(function: Function.new(fmea: fmea))) %>


<div class="all-add-cards-buttons pt-4">
  <div class="add-card-button" >
    <a  data-toggle="modal" data-target="#addFunction" href="#"><%= image_tag("actions/add_function.svg") %></a>
    <p>add function</p>
  </div>
  <div class="add-card-button" id="add-failure-mode" >
    <a data-toggle="modal" data-target="#addFailureMode" data-action="click->edit-fmea#createFailureMode" href="#"><%= image_tag("actions/add_failure_mode.svg") %></a>
    <p>add failure mode</p>
  </div>
  <div class="add-card-button" id="add-cause" >
    <a data-toggle="modal" data-target="#addCause" data-action="click->edit-fmea#createCause" href="#"><%= image_tag("actions/add_cause.svg") %></a>
    <p>add cause</p>
  </div>
  <div class="add-card-button" id="add-effect" >
    <a data-toggle="modal" data-target="#addEffect" data-action="click->edit-fmea#createEffect" href="#"><%= image_tag("actions/add_effect.svg") %></a>
    <p>add effect</p>
  </div>
  <div class="add-card-button" id="delete" >
    <a data-action="click->edit-fmea#delete" data-method="delete" data-target="edit-fmea.delete" rel="nofollow" data-confirm="Are you sure you want to delete the selected item?" href="/type/id"><%= image_tag("actions/delete.svg") %></a>
    <p>delete <span data-target="edit-fmea.delete"></span></p>
  </div>
</div>

<!-- Make sure to remember to insert the data-toggle="modal" again on the cause-element above! -->

