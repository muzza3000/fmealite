<!-- Need to tag modal with object id to ensure we have a unqiue target-->
<div class="modal fade" id=<%="edit#{element.class.to_s}#{element.id}Description"%>>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h3 class="modal-title">Edit <%= element.class.to_s %> Description</h3>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>

      <!-- Modal body -->
      <div class="modal-body">

        <%= simple_form_for(element, remote: true) do |f| %>

          <%= f.input :description, as: :text %>

          <% if element.class.to_s.downcase == "effect" %>
            <%= f.input :severity, {collection: (1..rating_scale(element)).to_a} %>
          <% end %>
          <% if element.class.to_s.downcase == "cause" %>
            <%= f.input :occurrence, {collection: (1..rating_scale(element)).to_a} %>
          <% end %>

          <div class="btn btn-success">
            <%= f.button :submit, class: "btn-clean", data: {dismiss: :dismiss} %>
          </div>

          <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        <% end %>

      </div>

    </div>
  </div>
</div>