<div class="one-failure-mode">
  <div class="one-failure-mode-left">
  <div class="fm-left"></div>
  <div class="fm-right">
    <div class="fm-element">
      <%= render "fmeas/edit_fmea/card_structure", element: failure_mode %>
    </div>
    <div class="causes-structure">
      <div class="cause-left"></div>
      <div class="cause-right">
        <% causes = failure_mode.causes %>
        <% causes = order_and_select(causes) %>
        <% causes.each do |cause| %>
          <div class="one-cause">
            <%= render "fmeas/edit_fmea/card_structure", element: cause %>
          </div>
        <% end %>
      </div>
    </div>
    <div class="cause-right-bottom"></div>
  </div>
  </div>

  <% counter = 0 %>
  <% effects = failure_mode.effects %>
  <% effects = order_and_select(effects) %>

  <% unless effects.length == 0 %>
    <div class="one-failure-mode-right">
      <div class="effects-top"></div>
      <div class="effects-bottom">
        <div class="effects-bottom-left">
          <div class="effects-bottom-left-top"></div>
          <div class="effects-bottom-left-bottom"></div>
        </div>
        <div class="effects-bottom-right">
          <% effects.each do |effect| %>
            <% counter += 1 %>
            <% if counter > 1 %>
              <div style="height: 10px;"></div>
            <% end %>
              <div class="card-structure-bottom-right">
                <%= render "fmeas/edit_fmea/card_content", element: effect  %>
              </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
